import { session } from 'wix-storage';

export async function darPontosComNotificacao(funcaoBackend, ...args) {
  const resultado = await funcaoBackend(...args);

  if (resultado.pontosGanhos > 0) {
    session.setItem("novaNotificacao", `+${resultado.pontosGanhos} Pixel Points adicionados!`);
  }

  return resultado;
}
